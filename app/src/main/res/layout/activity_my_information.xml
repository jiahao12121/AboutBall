<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    tools:context="com.example.cjh.aboutball.activity.CreateContractActivity">

    <com.example.cjh.aboutball.util.TitleLayout
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!--   <ImageView
           android:layout_width="match_parent"
           android:layout_height="5dp"
           android:background="@color/orange"
           android:contentDescription="@string/app_name" />-->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:text="用户名"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
        
        <EditText
            android:id="@+id/info_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="陈佳豪"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:maxLength="20"
            android:maxLines="1"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="47dp"
            android:textSize="18sp"/>
        

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="性别"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <Spinner
            android:id="@+id/select_sex"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:entries="@array/sex"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:text="年龄"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <Spinner
            android:id="@+id/select_age"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:entries="@array/age"
            android:textSize="18sp" />

    </LinearLayout>

    <!--
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/orange"
            android:contentDescription="@string/app_name" />
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="19sp"
            android:textColor="@android:color/black"
            android:text="个人简介"/>


    </LinearLayout>

    <!--    <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/orange"
            android:contentDescription="@string/app_name" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#fff">

        <EditText
            android:id="@+id/info_intro"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@null"
            android:padding="5dp"
            android:maxLength="100"
            android:maxLines="3"
            android:inputType="text"
            android:gravity="top"
            android:textSize="16sp" />
    </LinearLayout>
    

</LinearLayout>
